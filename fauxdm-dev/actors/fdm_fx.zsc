// THE CARNAGE ACTORS
// Used some Samsara code as an extremely loose base
class FDM_Gib : Actor
{
    Default
	{
		Radius 1;
		Height 1;
		Speed 5;
		Projectile;
		-NOGRAVITY
		-SOLID
		+MOVEWITHSECTOR
		+CLIENTSIDEONLY
		+NOBLOCKMAP
		+NOTELEPORT
		Gravity 0.65;
		scale 0.5;
	}
	
	States
	{
	Death:
		GIBS A 0 A_Gravity;
		GIBS ABCDEFG 3;
		stop;
	}
	
	override void PostBeginPlay()
	{		
		self.vel.z = random(5,9);
	}
	
	override void Tick()
	{
		if (curstate == SpawnState)
		{
			for (int i; i < 3; i++)
			{
				A_SpawnParticle("Red",SPF_RELATIVE,random(0,56),random(3,8),0,0,-8,(height / 2),frandom(2.0,-2.0),frandom(2.0,-2.0),frandom(1,8),0,0,-0.4);
			}
		}
		
		if (waterlevel > 0)
		{
			ThrustThingZ(0,4,1,1);
		}
		
		Super.Tick();
	}
}

