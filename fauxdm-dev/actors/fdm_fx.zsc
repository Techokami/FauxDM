class FDM_Debris : Actor
{
    Default
	{
		Radius 1;
		Height 1;
		Speed 5;
		Projectile;
		-NOGRAVITY
		-SOLID
		+MOVEWITHSECTOR
		+CLIENTSIDEONLY
		+NOBLOCKMAP
		+NOTELEPORT
		Gravity 0.65;
		//scale 0.5;
	}
	
	States
	{
	Spawn:
		DEBS A 0;
		DEBS A 0
		{
			bSPRITEFLIP = random(0,1);
		}
		DEBS A 0 A_Jump(256, "Speen1", "Speen2", "Speen3", "Speen4");
	Speen1:
		DEBS AB 5;
	Speen2:
		DEBS CD 5;
	Speen3:
		DEBS EF 5;
	Speen4:
		DEBS GH 5;
		goto Speen1;
	Death:
		TNT1 A 0;
		stop;
	}
	
	override void PostBeginPlay()
	{		
		self.vel.z = random(5,9);
	}
	
	override void Tick()
	{
		if (waterlevel > 0)
		{
			ThrustThingZ(0,4,1,1);
		}
		
		Super.Tick();
	}
}

