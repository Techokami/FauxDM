// Explosions
class FDM_ExplosiveBarrelExplosionVisualOnly : Actor
{
	Default
	{
	+NOCLIP
	+FORCEXYBILLBOARD 
	Projectile;
	Speed 0;
	RenderStyle "Add";
	}
	
	States
	{
	Spawn:
		TNT1 A 0;
		TNT1 A 0 
		{
			A_Quake (1,24,0,750,0);
			A_playSound("weapons/explode",CHAN_WEAPON);
		}
		BEXP ABCDEFGHIJKLM 2 Bright;
		Stop;
	}
}

