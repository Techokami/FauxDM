		{
			for (int i; i < 3; i++)
			{
				A_SpawnParticle("506094",SPF_RELATIVE,3,0,0,0,-8,(height / 2),frandom(2.0,-2.0),frandom(2.0,-2.0),frandom(1,8),0,0,-0.4);
