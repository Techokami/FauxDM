class FDM_ActorSpawnFog : Actor
{
	default
	{
		+NOBLOCKMAP
		+NOTELEPORT
		+NOGRAVITY
		+ZDOOMTRANS
		RenderStyle "Add";
	}
	States
	{
	Spawn:
		TFOG A 0;
		TFOG AAAAA 0 A_SpawnItemEx("FDM_ActorSpawnFogParticle",0,0,0,random(-5,5),random(-5,5),random(-5,5),random(0,360),SXF_NOCHECKPOSITION);
		TFOG A 0 A_PlaySound ("actors/spawn", CHAN_BODY);
		TFOG ABCDEFGHIJ 1 Bright;
		Stop;
	}	
}

